<%= simple_form_for @organization, url: organization_path, remote: true do |f| %>
  <%= f.input :org_name %>
  <%= f.input :location %>
  <%= f.association :causes, :label_method => lambda { |cause| "#{cause.cause_type}" }, as: :check_boxes %>
  <%= f.text_area :mission %>
  <%= f.input :description %>
  <%= f.input :year_founded, :label => "Year Founded"  %>
  <%= f.input :size, :label => "Number of Employees" %>
  <%= f.input :url: :label => "Website" %>
  <%= f.file_field :avatar %>
  <%= f.button :submit %>
<% end %>

<div id="sign_in_form">
  <%= simple_form_for(User.new, :as => :user, :url => session_path(:user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :label => false, :placeholder => "e-mail address"%>
    <%= f.input :password, :required => false, :label => false, :placeholder => "password" %>

    <%= f.input :remember_me, :input_html => { :id => "check_box_signin"}, :as => :boolean %>

    <%= f.hidden_field :profile_type %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "sign in" %>
  </div>
  <% end %>
</div>




